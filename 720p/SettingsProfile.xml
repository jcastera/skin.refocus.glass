<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">10</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<controls>

	<!--global includes-->
		<include>global_Background</include>
		<include>global_Includes</include>
		<include>windowTitle_System</include>

		<!--left column-->
		<control type="group" id="9000">
			<posx>65</posx>
			<posy>90</posy>
			<include>transition_Content</include>
			<control type="button" id="10">
				<label>$LOCALIZE[20096]</label>
				<onfocus>Skin.SetString(ProfileSettings,1)</onfocus>
				<onleft>12</onleft>
				<onright>4</onright>
				<onup>11</onup>
				<ondown>11</ondown>
				<include>settings_Menu</include>
			</control>
			<control type="button" id="11">
				<posy>45</posy>
				<label>$LOCALIZE[13200]</label>
				<onfocus>Skin.SetString(ProfileSettings,2)</onfocus>
				<onright>2</onright>
				<onup>10</onup>
				<ondown>10</ondown>
				<include>settings_Menu</include>
			</control>
			<!--right column-->
			<control type="group">
				<posx>302</posx>
				<!--login-->
				<control type="group">
					<visible>Skin.String(ProfileSettings,1)</visible>
					<control type="radiobutton" id="4">
						<width>850</width>
						<height>44</height>
						<onleft>10</onleft>
						<onup>5</onup>
						<ondown>5</ondown>
						<label>$LOCALIZE[20096]</label>
						<include>settings_Radiobutton</include>
					</control>
					<!--auto login-->
					<control type="button" id="5">
						<posy>45</posy>
						<width>850</width>
						<height>44</height>
						<onleft>10</onleft>
						<onup>4</onup>
						<ondown>4</ondown>
						<label>$LOCALIZE[33084]</label>
						<label2>$INFO[System.ProfileAutoLogin]</label2>
						<include>settings_Listbutton</include>
						<visible>!System.HasLoginScreen</visible>
						<enable>!Window.IsVisible(ProfileSettings) + !System.HasLoginScreen</enable>
					</control>
				</control>
				<!--profiles-->
				<control type="list" id="2">
					<width>850</width>
					<height>600</height>
					<onleft>11</onleft>
					<onup>2</onup>
					<ondown>2</ondown>
					<visible>Skin.String(ProfileSettings,2)</visible>
					<itemlayout height="45">
						<control type="image">
							<width>850</width>
							<height>44</height>
							<texture>views/focus.png</texture>
							<colordiffuse>column2</colordiffuse>
						</control>
						<control type="label">
							<posy>3</posy>
							<width>850</width>
							<height>35</height>
							<info>ListItem.Label</info>
							<include>settings_Listbutton</include>
						</control>
						<control type="label">
							<posx>845</posx>
							<posy>3</posy>
							<width>400</width>
							<height>35</height>
							<align>right</align>
							<textcolor>Color2</textcolor>
							<info>ListItem.Label2</info>
							<include>settings_Listbutton</include>
						</control>
					</itemlayout>
					<focusedlayout height="45">
						<control type="group">
							<visible>!Control.HasFocus(2)</visible>
							<control type="image">
								<width>850</width>
								<height>44</height>
								<texture>views/focus.png</texture>
								<colordiffuse>column2</colordiffuse>
							</control>
							<control type="label">
								<posy>3</posy>
								<width>850</width>
								<height>35</height>
								<info>ListItem.Label</info>
								<include>settings_Listbutton</include>
							</control>
							<control type="label">
								<posx>845</posx>
								<posy>3</posy>
								<width>400</width>
								<height>35</height>
								<align>right</align>
								<info>ListItem.Label2</info>
								<textcolor>Color2</textcolor>
								<include>settings_Listbutton</include>
							</control>
						</control>
						<control type="group">
							<visible>Control.HasFocus(2)</visible>
							<control type="image">
								<width>850</width>
								<height>44</height>
								<texture>views/focus.png</texture>
								<colordiffuse>Color1</colordiffuse>
								<visible>Control.HasFocus(2)</visible>
							</control>
							<control type="label">
								<posy>3</posy>
								<width>850</width>
								<height>35</height>
								<info>ListItem.Label</info>
								<textcolor>Color5</textcolor>
								<include>settings_Listbutton</include>
							</control>
							<control type="label">
								<posx>845</posx>
								<posy>3</posy>
								<width>400</width>
								<height>35</height>
								<align>right</align>
								<info>ListItem.Label2</info>
								<textcolor>Color5</textcolor>
								<include>settings_Listbutton</include>
							</control>
						</control>
					</focusedlayout>
				</control>
			</control>
		</control>
	</controls>
</window>