<?xml version="1.0" encoding="UTF-8"?>
<window>
	<coordinates>
		<system>1</system>
		<left>0</left>
		<top>0</top>
	</coordinates>
	<controls>
		<control type="group">
			<include>transition_Info</include>
			<visible>Player.HasAudio + Skin.HasSetting(overlay.enable) + ![Window.IsActive(infodialog) | Window.IsActive(extendedprogressdialog) | Window.IsActive(home) | Window.IsActive(fullscreenvideo) | Window.IsActive(614) | Window.IsActive(busydialog)] + IsEmpty(Window(10025).Property(TvTunesIsAlive))</visible>
			<control type="label" id="200">
				<right>70</right>
				<label>$INFO[MusicPlayer.Title]</label>
				<include>toast_Top</include>
			</control>
			<control type="label" id="201">
				<right>70</right>
				<label>$VAR[toast_Music]</label>
				<include>toast_Bottom</include>
			</control>
			<control type="image">
				<include>toast_Icon</include>
				<texture>toast/play.png</texture>
				<visible>!Player.Muted + IntegerGreaterThan(Player.Volume,0)</visible>
			</control>
		</control>
	</controls>
</window>