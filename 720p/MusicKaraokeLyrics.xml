<?xml version="1.0" encoding="UTF-8"?>
<window>
	<controls>
		<!--visualisation-->
		<control type="karvisualisation" id="1">
			<include>screen_Dimensions</include>
			<visible>false</visible>
		</control>
		<!--fullscreen image-->
		<control type="image" id="2">
			<include>screen_Dimensions</include>
			<visible>false</visible>
		</control>
		<control type="group">
			<visible>MusicPlayer.Offset(number).Exists + !IntegerGreaterThan(Player.TimeRemaining,20)</visible>
			<include>fadeinout</include>
			<left>420</left>
			<control type="image">
				<width>400</width>
				<height>55</height>
				<include>dialog_Window</include>
			</control>
			<!--next song name-->
			<control type="label" id="402">
				<left>20</left>
				<top>20</top>
				<width>360</width>
				<align>center</align>
				<label>[B]$LOCALIZE[209] :[/B] $INFO[MusicPlayer.offset(1).Title]</label>
				<textcolor>Color4</textcolor>
				<include>dialog_Title</include>
			</control>
		</control>
	</controls>
</window>